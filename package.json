{
  "name": "stock-ticker",
  "version": "0.0.0",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "start:server": "nest start --watch | bunyan -o short",
    "start:prod": "node dist/api/main",
    "start": "concurrently -c \"green.bold,blue.bold\" -n \"SERVER,TICKER\" \"yarn start:server\" \"yarn start:client --progress=false --verbose=false\"",
    "format:check": "prettier --check \"server/**/*.ts\" \"test/**/*.ts\" \"client/**/*.ts\"",
    "format": "prettier --write \"server/**/*.ts\" \"test/**/*.ts\" \"client/**/*.ts\"",
    "lint": "eslint \"{server,apps,libs,test}/**/*.ts\" --fix",
    "ng": "ng",
    "start:client": "ng serve",
    "build:client": "ng build --prod",
    "commit": "cz"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~10.0.2",
    "@angular/common": "~10.0.2",
    "@angular/compiler": "~10.0.2",
    "@angular/core": "~10.0.2",
    "@angular/forms": "~10.0.2",
    "@angular/platform-browser": "~10.0.2",
    "@angular/platform-browser-dynamic": "~10.0.2",
    "@angular/router": "~10.0.2",
    "@nestjs/common": "^7.0.0",
    "@nestjs/core": "^7.0.0",
    "@nestjs/graphql": "^7.9.1",
    "@nestjs/platform-express": "^7.0.0",
    "@nestjs/swagger": "^4.7.8",
    "@nestjs/typeorm": "^7.1.5",
    "apollo-server-express": "^2.19.0",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.12.2",
    "graphql": "^15.4.0",
    "graphql-tools": "^7.0.2",
    "pg": "^8.5.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "~6.5.5",
    "swagger-ui-express": "^4.1.5",
    "tslib": "^2.0.0",
    "typeorm": "^0.2.29",
    "zone.js": "~0.10.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.1000.1",
    "@angular/cli": "~10.0.1",
    "@angular/compiler-cli": "~10.0.2",
    "@nestjs/cli": "^7.0.0",
    "@nestjs/schematics": "^7.0.0",
    "@nestjs/testing": "^7.0.0",
    "@types/bunyan": "^1.8.6",
    "@types/express": "^4.17.3",
    "@types/jest": "26.0.10",
    "@types/node": "^13.9.1",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "3.9.1",
    "@typescript-eslint/parser": "3.9.1",
    "bunyan": "^1.8.14",
    "commitizen": "^4.2.2",
    "nodemon": "^2.0.6",
    "concurrently": "^5.2.0",
    "dotenv": "^8.2.0",
    "eslint": "7.7.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "jest": "26.4.2",
    "prettier": "^1.19.1",
    "supertest": "^4.0.2",
    "ts-jest": "26.2.0",
    "ts-loader": "^6.2.1",
    "ts-node": "9.0.0",
    "tsconfig-paths": "^3.9.0",
    "tslint": "~6.1.0",
    "typescript": "~3.9.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "server",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageReporters": [
      "text-summary",
      "html"
    ],
    "collectCoverage": true,
    "coverageDirectory": "../coverage/server",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@sz/interfaces$": "<rootDir>/interfaces",
      "^@sz/enums$": "<rootDir>/enums",
      "^@sz/utils$": "<rootDir>/utils"
    }
  }
}
